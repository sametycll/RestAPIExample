@model WeatherInfo
@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_UserLayout.cshtml";
}

<div class="col-12 d-flex align-items-stretch flex-column">
    <div class="card bg-light d-flex flex-fill">
        <div class="card-header text-muted border-bottom-0">
            @DateTime.Now
        </div>
        <div class="card-body pt-0">
            <div class="row">
                <div class="col-7">
                    <h2 class="lead"><b>@Model.name,@Model.sys.country</b></h2>
                    <h3>@Model.main.temp°C</h3>
                    <p class="text-muted text-sm"><b>Feels like @Model.main.feels_like°C. @Model.weather[0].main, @Model.weather[0].description.</b></p>
                    <ul class="ml-4 mb-0 fa-ul text-muted">
                        <li class="small">Speed: @Model.wind.speed m/s N</li>
                        <li class="small">Pressure: @Model.main.pressure hPa</li>
                        <li class="small">Humidity: @Model.main.humidity%</li>                     
                       
                    </ul>
                </div>
                <div class="col-5 text-center">
                    <img src="https://openweathermap.org/img/wn/@(Model.weather[0].icon).png" alt="user-avatar" class="img-circle img-fluid" style="height:125px; width:125px;">
                </div>
            </div>
        </div>
        <div class="card-footer">
            
        </div>
    </div>
</div>


